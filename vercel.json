{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron-job",
      "dest": "/index.js"
    }
  ],
  "env": {
    "EMAIL_USER": "@EMAIL_USER",
    "EMAIL_PASS": "@EMAIL_PASS",
    "RECIPIENT_EMAIL": "@RECIPIENT_EMAIL"
  }
}
